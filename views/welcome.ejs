<%- include('./partials/header') -%>
<section class="mainheader">
  <div class="row text-center text-light">
    <div class="overlay"></div>
    <div class="col-12">
    </div>
    <div class="col-12 banner">
      <p>Welcome To <b>StoryBooks</b></p>
      <h2 class="py-3">SAVE YOUR STORIES FOR FREE</h2>
      <h5>______________</h5>
      <a href="/users/login" class="text-light btn btn-outline mt-3 pb-4"><b>GET STARTED</b></a>
    </div>
  </div>
</section>

<section id="about">
  <!-- <h2 class="text-center py-3 black text-light sticky-top">About</h2> -->
  <div class="container lead p-2">
    <div class="row">
      <div class="col-md-7 text-center">
        <h2 >What Is StoryBook</h2>
        <p>StoryBook is a free platform which allows you to Create, Read, Update and Delete stories, 
           we allow storing stories publicly or privately.
        </p>
      </div>
      <div class="col-md-5">
        <h2 class=" text-center">How we Work</h2>
        <p class=" text-center">You will have to register with us to be able to see stories and 
          also write your own stories...
        </p>
        <ol>
          <li>Click on <a href="/users/register">register</a> to be a member,</li>
          <li>After registration completes, you will be asked to login</li>
          <li>When login, you are the free to make stories, and read other 
            people public stories.
          </li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section id="stories">
  <!-- <h2 class="text-center py-3 black text-light sticky-top">Stories</h2> -->
  <div class="container">
    <div class="row">
      <% if (story) { %>
        <% story.forEach(story =>{ %>
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-image">

                    </div>
                    <div class="card-content center-align">
                        <h5><%= story.title %></h5>
                        <br>
                        <div class="chip">
                            <span><i class="fa fa-user"></i></span>
                            <a href="/stories/user/<%= story.user._id %>"><%= story.user.name %></a>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="/stories/<%= story._id%>" class="btn grey">Read More</a>
                    </div>
                </div>
            </div>

        <%})%>
    <%} else {%>
        <p>No stories to display</p>
    <% } %>
    </div>
  </div>
</section>

